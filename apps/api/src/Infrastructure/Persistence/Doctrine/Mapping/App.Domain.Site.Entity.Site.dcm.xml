<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Site\Entity\Site" table="sites">
        <id name="id" type="site_id" column="id" />
        <field name="name" type="string" column="name" length="100" />
        <field name="url" type="string" column="url" length="255" />
        <field name="type" type="site_type" column="type" length="50" />
        <field name="createdAt" type="datetime_immutable" column="created_at" />

        <many-to-many field="users" target-entity="App\Domain\Auth\Entity\User" mapped-by="sites" />
    </entity>

</doctrine-mapping>
