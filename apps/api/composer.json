{
    "name": "tiny-cms/api",
    "description": "Tiny CMS API built with Slim.",
    "type": "project",
    "require": {
        "php": "^8.3",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "blumilksoftware/codestyle": "^4.0",
        "infection/infection": "^0.29",
        "phpstan/phpstan": "^1.12",
        "phpunit/phpunit": "^11.1",
        "robmorgan/phinx": "^0.16"
    },
    "autoload": {
        "psr-4": {
            "TinyCms\\Api\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TinyCms\\Api\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S 0.0.0.0:8080 -t public",
        "test": "phpunit",
        "lint": "phpstan analyse src tests",
        "cs": "php-cs-fixer fix --config=.php-cs-fixer.dist.php --dry-run --diff",
        "cs:fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "mutation": "infection --threads=4 --min-msi=80 --min-covered-msi=85",
        "migrate": "php -d variables_order=EGPCS vendor/bin/phinx migrate -c phinx.php"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true,
            "phpstan/extension-installer": true
        }
    }
}
